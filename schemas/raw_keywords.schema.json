{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Raw Keywords (Foundation)",
  "type": "object",
  "properties": {
    "language": { 
      "type": "string", 
      "enum": ["he", "en"], 
      "default": "he" 
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "keyword": { "type": "string" },
          "intent": { 
            "type": "string", 
            "enum": ["informational", "navigational", "transactional", "commercial"] 
          },
          "source": { 
            "type": "string", 
            "enum": ["ads", "dataforseo", "crawl", "ai", "translation"] 
          },
          "seed_from": { 
            "type": "string", 
            "description": "Which journey question or content_need seeded this" 
          },
          "translation_of": { 
            "type": "string", 
            "description": "If translated from ENâ†’HE" 
          }
        },
        "required": ["keyword"]
      }
    },
    "_meta": {
      "type": "object",
      "properties": {
        "schema_version": { "type": "string", "default": "1.0.0" },
        "produced_by": { "type": "string", "default": "keyword_discovery" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["schema_version", "produced_by", "timestamp"]
    }
  },
  "required": ["keywords", "_meta"],
  "additionalProperties": false
}