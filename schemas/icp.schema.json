{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ICP (Foundation)",
  "type": "object",
  "properties": {
    "personas": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "persona_name": { "type": "string" },
          "description": { "type": "string" },
          "context": { "type": "string", "description": "Industry/role context derived from business profile" },
          "pains": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
          "goals": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
          "behaviors": { "type": "array", "items": { "type": "string" }, "description": "Channels, research habits" }
        },
        "required": ["persona_name", "pains", "goals"]
      }
    },
    "_meta": {
      "type": "object",
      "properties": {
        "schema_version": { "type": "string", "default": "1.0.0" },
        "produced_by": { "type": "string", "default": "icp_definition" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["schema_version", "produced_by", "timestamp"]
    }
  },
  "required": ["personas", "_meta"],
  "additionalProperties": false
}