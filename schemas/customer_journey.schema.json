{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Customer Journey (Foundation)",
  "type": "object",
  "properties": {
    "stages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "stage": { 
            "type": "string", 
            "enum": ["awareness", "consideration", "decision"] 
          },
          "questions": { "type": "array", "items": { "type": "string" } },
          "content_needs": { "type": "array", "items": { "type": "string" } }
        },
        "required": ["stage", "questions", "content_needs"]
      }
    },
    "_meta": {
      "type": "object",
      "properties": {
        "schema_version": { "type": "string", "default": "1.0.0" },
        "produced_by": { "type": "string", "default": "customer_journey" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["schema_version", "produced_by", "timestamp"]
    }
  },
  "required": ["stages", "_meta"],
  "additionalProperties": false
}